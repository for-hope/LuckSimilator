<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.forhope.chance.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:imeOptions="flagNoExtractUi">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Your Luck Meter is 00%"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/background_light"
            android:textSize="26sp"
            android:textStyle="bold"
            android:typeface="sans"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/secNumber"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:hint="0"
            android:inputType="number|numberDecimal"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="30sp"
            tools:targetApi="lollipop" />

        <EditText
            android:id="@+id/fullNumber"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/secNumber"
            android:layout_alignRight="@+id/secNumber"
            android:layout_below="@+id/secNumber"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:ems="010"
            android:hint="100 (default)"
            android:inputType="number"
            android:textAllCaps="false"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="26sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="false"
            android:layout_below="@+id/fullNumber"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@android:color/holo_orange_dark"
            android:text="Try!"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textColorLink="@android:color/background_light"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="186dp"
            tools:layout_editor_absoluteY="-66dp" />

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingTop="10dp"
            android:text="Out of"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/background_light"
            android:textSize="34sp"
            android:textStyle="bold"
            android:typeface="sans"
            android:layout_alignBottom="@+id/fullNumber"
            android:layout_toLeftOf="@+id/fullNumber"
            android:layout_toStartOf="@+id/fullNumber" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingStart="20dp"
            android:paddingTop="30dp"
            android:text="Your Luck is"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/background_light"
            android:textSize="34sp"
            android:textStyle="bold"
            android:typeface="sans"
            android:layout_below="@+id/bool"
            android:layout_alignRight="@+id/button"
            android:layout_alignEnd="@+id/button" />

        <TextView
            android:id="@+id/bool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:paddingTop="20dp"
            android:text="Test Your Luck!"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>
